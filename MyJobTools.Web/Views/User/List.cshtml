<form class="layui-form">
    <div class="layui-panel-window">
    </div>
    <div class="layui-inline">
        <label class="layui-form-label">搜索选择框</label>
        <div class="layui-input-inline">
            <select name="modules" lay-verify="required" lay-search="">
                <option value="">直接选择或搜索选择</option>
                <option value="1">yerlayerlayerlayerlayr</option>
                <option value="2">form</option>
                <option value="3">layim</option>
                <option value="4">element</option>
            </select>

        </div>
    </div>
    <table id="user-table" class="layui-table">
        <colgroup>
            <col width="150">
            <col width="200">
            <col width="200">
        </colgroup>
        <thead>
            <tr>
                <th>用户编号</th>
                <th>用户名称</th>
                <th>地址</th>
                <th>生日</th>
            </tr>
        </thead>
        <tbody>
            <tr v-for="item in userList">
                <td>{{ item.UserCode }}</td>
                <td>{{ item.UserName }}</td>
                <td>{{ item.Address }}</td>
                <td v-if="item.Birthday">{{ item.Birthday }}</td>
                <td v-else> - </td>
            </tr>
        </tbody>
    </table>
</form>


@section scripts{
    <script src="/Scripts/vue.component.js"></script>
    <script>
        var list = $.parseJSON('@Html.Raw(list.ToJson())');
        var form;
        layui.use('form', function () {
            form = layui.form;
            form.render();
        });

        layui.use('user-table', function () {
            var table = layui.table;

            //第一个实例
            table.render({
                elem: '#user-table'
                , height: 315
                , url: '/demo/table/user/' //数据接口
                , page: true //开启分页
                , cols: [[ //表头
                    { field: 'id', title: 'ID', width: 80, sort: true, fixed: 'left' }
                    , { field: 'username', title: '用户名', width: 80 }
                    , { field: 'sex', title: '性别', width: 80, sort: true }
                    , { field: 'city', title: '城市', width: 80 }
                    , { field: 'sign', title: '签名', width: 177 }
                    , { field: 'experience', title: '积分', width: 80, sort: true }
                    , { field: 'score', title: '评分', width: 80, sort: true }
                    , { field: 'classify', title: '职业', width: 80 }
                    , { field: 'wealth', title: '财富', width: 135, sort: true }
                ]]
            });

        });

        $(function () {

            Vue.component('todo-item', {
                props: ['todo'],
                template: '<li>{{ todo.UserName }}</li>'
            });

            var userTable = new Vue({
                el: '#user-table',
                data: function () {
                    return {
                        userList: list
                    }
                },
                filters: {
                    capitalize: function (str) {
                        return str.charAt(0).toUpperCase() + str.slice(1)
                    }
                },
                methods: {
                    sortBy: function (key) {
                        this.sortKey = key
                        this.sortOrders[key] = this.sortOrders[key] * -1
                    }
                }
            });

    });
    </script>
}

